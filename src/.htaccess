ErrorDocument 404 /404.html

<IfModule mod_rewrite.c>
	RewriteEngine on
	
	RewriteCond %{HTTPS} !=on
	RewriteCond %{HTTP:X-Forwarded-Proto} !https
	RewriteCond %{HTTP:X-Forwarded-Ssl} !on
	RewriteCond %{HTTP:Front-End-Https} !on
	RewriteCond %{ENV:HTTPS} !^(on|1)$ [NC]
	RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=307,L,NE]

	RewriteCond %{HTTP_HOST} ^staticphp.com$
	RewriteRule ^(.*)$ https://www.staticphp.com/$1 [R=307,END]

	RewriteCond %{HTTP_HOST} ^staticphp.io$ [OR]
	RewriteCond %{HTTP_HOST} ^www.staticphp.io$
	RewriteRule ^(.*)$ https://www.staticphp.com/$1 [R=307,END]
</IfModule>
