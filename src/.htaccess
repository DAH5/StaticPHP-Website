ErrorDocument 404 /404.html

<IfModule mod_rewrite.c>
	RewriteEngine on
	
	RewriteCond %{env:HTTPS} !on
	RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=307,END]

	RewriteCond %{HTTP_HOST} ^staticphp.com$
	RewriteRule ^(.*)$ https://www.staticphp.com/$1 [R=307,END]

	RewriteCond %{HTTP_HOST} ^staticphp.io$ [OR]
	RewriteCond %{HTTP_HOST} ^www.staticphp.io$
	RewriteRule ^(.*)$ https://www.staticphp.com/$1 [R=307,END]
</IfModule>
